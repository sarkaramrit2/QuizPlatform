function viewProductElevationSearch() {
	var categoryId = $('#categoryName option:selected').attr('value');
	var comingSoon = $("#coming-soon").is(":checked");
    if(categoryId != 0) {
    	var ajaxUrl = "/admin/productElevationSearch/view?categoryId=" + categoryId + '&isComingSoon=' + comingSoon;
    	$.ajax({
    		url : ajaxUrl,
    		dataType : 'json',
    		success : function(data) {
    			html = '';
    			$('#errorPogs').remove();
    			if(data.length>0){
    				html+="<div class='control-group' style='background: none' id='outputPogs'><label class='control-label' for='pogs'>POG IDs:</label>";
    				html+="	<div class='controls'><table class='table table-striped'>";
    				html+="<thead><tr><th>Order</th><th>POG ID</th><th>Product Name</th><th>Page URL</th></tr></thead><tbody>";
    				for ( var i = 0; i < (data.length); i++) {
    					html+="<tr>";
    					html +="<td>"+(i+1)+"</td>";
    					html += "<td>" + data[i].pog + "</td>";
    					html += "<td>" + data[i].productName + "</td>";
    					html += "<td><a href='" + contextPath + data[i].pageUrl + "' target='_blank'> View Product</a></td>";
    					html+="</tr>";
    				}
    				html+="</tbody></table></div></div>";
    			}else{
    				html+="<div class='control-group' style='background: none' id='outputPogs'><label class='control-label' for='pogs'>No Elevated POG IDs.</label>";
    			}
    			$('#pogs').html(html);
    		}
    	});
    } else {
    	$('#pogs').html("");
    }
}

if(message!=""){
addSuccessMessage(message);
}
if(sheetMessage!=""){
addMessage(sheetMessage);
}
if(emptyRow!=""){
addError(emptyRow);
}
if(emptyRow=="" && errorMessage!=""){
$('#errorPogs').remove();
addError(errorMessage);
}
if(emptyRow=="" && errorMessage=="" && pogError!=""){
addError(pogError);
}
function loader(){
$('#loaderDiv').show();
$('#modelId').hide();
$('#xId').hide();
var categoryId = $('#categoryName option:selected').attr('value');

if(categoryId == 0) {
	addError("Please select a Category");
	$('#upload').modal('hide');
	return true;
}
var comingSoon = $("#coming-soon").is(":checked");
var url = $("#uploadForm").attr("action") +'?isComingSoon=' + comingSoon;

$("#uploadForm").attr("action", url);
$("#uploadForm").submit();
}
$('#loaderDiv').hide();

$("#coming-soon").change(function() {
	viewProductElevationSearch();
});
