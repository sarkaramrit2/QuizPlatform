/* All the validations of forms happen here 
 * Functions called in this js are include suggestor-admin-functions.js 
 */

$("#index-suggestion-button")
		.click(
				function() {

					var keyword = false;
					var category = false;

					if ($('#keyword').val() == '') {
						keyword = false;
						$('#keywordError')
								.html(
										'<i class="icon-chevron-left"></i> Please Enter Keyword');
						errorValidation($('#inputKeyword'));
					} else {
						keyword = true;
						successValidation($('#inputKeyword'));
						$('#keywordError').html('');
					}

					if ($('#category').val() == '') {
						category = false;
						$('#categoryError')
								.html(
										'<i class="icon-chevron-left"></i> Please Select Category');
						errorValidation($('#inputCategory'));
					} else {
						category = true;
						successValidation($('#inputCategory'));
						$('#categoryError').html('');
					}

					if (validationForm()) {
						var keyword = $('#keyword').attr('value');
						var category = $('#category').attr('value');
						var count = $('#count').attr('value');
						var priority = $('#priority').attr('value');
						indexSuggestion(keyword, category, count, priority);
					} else {
						$("#error")
								.html(
										"<div>'Keyword and Category are mandatory!'</div>");
						return keyword && category;
					}
				});

$("#delete-suggestion-button")
		.click(
				function() {

					var keyword = false;

					if ($('#dkeyword').val() == '') {
						keyword = false;
						$('#dkeywordError')
								.html(
										'<i class="icon-chevron-left"></i> Please Enter Keyword');
						errorValidation($('#dinputKeyword'));
					} else {
						keyword = true;
						successValidation($('#dinputKeyword'));
						$('#dkeywordError').html('');
					}

					if (validationDeleteForm()) {
						var keyword = $('#dkeyword').attr('value');
						deleteSuggestion(keyword);
					} else {
						$("#error").html("<div>'Keyword is mandatory!'</div>");
						return keyword;
					}
				});

$("#suggestion-details-button")
		.click(
				function() {

					var keyword = false;

					if ($('#dkeywordDetails').val() == '') {
						keyword = false;
						$('#dkeywordDetailsError')
								.html(
										'<i class="icon-chevron-left"></i> Please Enter Keyword');
						errorValidation($('#dinputKeywordDetails'));
					} else {
						keyword = true;
						successValidation($('#dinputKeywordDetails'));
						$('#dkeywordDetailsError').html('');
					}

					if (validationDetailsForm()) {
						var keyword = $('#dkeywordDetails').attr('value');
						suggestionDetails(keyword);
					} else {
						$("#error").html("<div>'Keyword is mandatory!'</div>");
						return keyword;
					}
				});
function validationForm() {
	if ($('#keyword').val() == '') {
		return false;
	}
	if ($('#category').val() == '') {
		return false;
	}
	return true;
}
function validationBForm() {
	if ($('#bkeyword').val() == '') {
		return false;
	}
	if ($('#bucket').val() == '') {
		return false;
	}
	return true;
}
function validationDeleteForm() {
	if ($('#dkeyword').val() == '') {
		return false;
	}
	return true;
}

function validationDetailsForm() {
	if ($('#dkeywordDetails').val() == '') {
		return false;
	}
	return true;
}

function errorValidation(divId) {
	divId.removeClass("warning");
	divId.removeClass("info");
	divId.removeClass("success");
	divId.addClass("error");
}

function successValidation(divId) {
	divId.removeClass("info");
	divId.removeClass("error");
	divId.removeClass("warning");
	divId.addClass("success");
}

$("#bindex-suggestion-button")
		.click(
				function() {

					var keyword = false;
					var bucket = false;

					if ($('#bkeyword').val() == '') {
						keyword = false;
						$('#bkeywordError')
								.html(
										'<i class="icon-chevron-left"></i> Please Enter Keyword');
						errorValidation($('#binputKeyword'));
					} else {
						keyword = true;
						successValidation($('#binputKeyword'));
						$('#bkeywordError').html('');
					}

					if ($('#bucket').val() == '') {
						bucket = false;
						$('#pbucketError')
								.html(
										'<i class="icon-chevron-left"></i> Please Select Bucket');
						errorValidation($('#binputBucket'));
					} else {
						bucket = true;
						successValidation($('#binputBucket'));
						$('#pbucketError').html('');
					}

					if (validationBForm()) {
						var keyword = $('#bkeyword').val();
						var bucket = $('#bucket').val();
						var bLogParseScore = $('#bLogParseScore').val();
						var bBeaconScore = $('#bBeaconScore').val();
						var bRuleCatalogScore = $('#bRuleCatalogScore').val();
						var bCatalogScore = $('#bCatalogScore').val();
						var bTitleScore = $('#bTitleScore').val();
						
						indexSuggestionOnBucket(keyword, bucket, bLogParseScore, bBeaconScore, bRuleCatalogScore, bCatalogScore, bTitleScore);
					} else {
						$("#error")
								.html(
										"<div>'Keyword and Bucket are mandatory!'</div>");
						return keyword && category;
					}
				});
