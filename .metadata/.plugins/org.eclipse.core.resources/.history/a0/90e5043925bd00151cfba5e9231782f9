package com.quiz.utils;

import org.apache.http.client.methods.HttpPost;
import org.apache.solr.common.SolrInputDocument;

import com.quiz.core.dto.QuestionDTO;
import com.quiz.enums.SystemProperty;

@SuppressWarnings("deprecation")
public class SolrUtils {
	
	public static HttpPost getHttpPost(SystemProperty property){
		return new HttpPost(property.getPropertyValue()+"/solr/update");
	}

	public static SolrInputDocument buildSolrDoc(QuestionDTO quesDTO) {
		SolrInputDocument solrDoc = new SolrInputDocument();
		solrDoc.addField("", quesDTO.getQuesId());
		solrDoc.addField("", quesDTO.getQuestion());
		solrDoc.addField("", quesDTO.getQuestionUrl());
		solrDoc.addField("", quesDTO.getAnswerType());
		solrDoc.addField("", quesDTO.getCategory());
		solrDoc.addField("", quesDTO.getDifficulyLevel());
		solrDoc.addField("", quesDTO.getSubCategory());
		solrDoc.addField("", quesDTO.getSubmittedBy());
		solrDoc.addField("", quesDTO.getAnwsers());
		solrDoc.addField("", quesDTO.getHints());
		
		
		
		
		
		return null;
	}
}
