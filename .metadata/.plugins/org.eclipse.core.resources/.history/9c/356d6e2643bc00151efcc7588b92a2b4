<%@ include file="/tld_includes.jsp"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<tiles:insertTemplate template="/views/layout/adminBaseThemeOld.jsp">
	<tiles:putAttribute name="title" value="PromoCode Admin" />
	<tiles:putAttribute name="head">
	</tiles:putAttribute>
	<tiles:putAttribute name="deferredScript">
		<script type="text/javascript">
			$("#add-negated-pogs-submit").click(function() {
				removeMessage();
				addNegatedPOGs();
			});
			function addNegatedPOGs() {
				var ajaxUrl = "/admin/promo/submit";
				$.ajax({
					url : ajaxUrl,
					type : "GET",
					dataType : 'json',
					success : function(data) {
						var status = data['status'];
						var msg = data['message'];
						if (status == "success") {
							addSuccessMessage(msg);
						} else {
							addError(msg);
						}
					}
				});
			}
		</script>
	</tiles:putAttribute>
	<tiles:putAttribute name="body">
		<div style="margin-left: 10px; margin-right: 10px">
			<div class="navbar">
				<div class="navbar-inner">
					<a class="brand">PromoCode Admin</a>
				</div>
			</div>
			<div id="message"></div>

			<div class="tabbable tabs-below">
				<!-- Only required for left/right tabs -->
				<ul class="nav nav-tabs">
					<li class="active"><a id="promo" href="#tab1"
						data-toggle="tab">PromoCode Admin</a></li>
				</ul>
				<div class="tab-content" style="height: 50px; padding: 10 px">
					<div class="tab-pane active" id="tab1">
						<form class="form-horizontal">
							<div class="control-group">
								<div class="controls">
									<button class="btn btn-primary btn-medium" type="button"
										id="add-negated-pogs-submit">Add Negated POGs</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</tiles:putAttribute>

</tiles:insertTemplate>
