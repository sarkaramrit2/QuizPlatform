<%@ include file="/tld_includes.jsp"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<tiles:insertTemplate template="/views/layout/adminBaseTheme.jsp">
	<c:choose>
		<c:when test="${param['code'] == '404'}">
			<tiles:putAttribute name="title"
				value="SnapDeal.com - 404 &ndash; Page not found" />
		</c:when>
		<c:otherwise>
			<c:choose>
				<c:when test="${param['code'] == '500'}">
					<tiles:putAttribute name="title"
						value="SnapDeal.com - 500 &ndash; Internal Server Error" />
				</c:when>
				<c:when test="${param['code'] == '403'}">
					<tiles:putAttribute name="title"
						value="SnapDeal.com - 403 &ndash; Access Denied" />
				</c:when>
			</c:choose>
		</c:otherwise>
	</c:choose>

	<tiles:putAttribute name="body">
		<div id="internal-content">
			<c:choose>
				<c:when test="${param['code'] == '404'}">
					<div align="center">
						<img src="${path.resources('img/error/error404.jpg')}">
					</div>
				</c:when>
				<c:otherwise>
					<div align="center">
						<c:choose>
							<c:when test="${param['code'] == '500'}">
								<img src="${path.resources('img/error/error500.jpg')}">
							</c:when>
							<c:when test="${param['code'] == '403'}">
								<img src="${path.resources('img/error/error403.jpg')}">
							</c:when>
						</c:choose>
					</div>
				</c:otherwise>
			</c:choose>

		</div>
	</tiles:putAttribute>
</tiles:insertTemplate>