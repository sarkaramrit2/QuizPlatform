<c:if test="${not empty properties}">
	<table cellpadding="0" cellspacing="0" border="0"
		class="display dataTable" id="nodeTable">
		<thead>
			<tr>
				<th>S. No.</th>
				<th>Name</th>
				<th>DB Value</th>
				<th>Action</th>
			</tr>
		</thead>

		<tbody>
			<c:forEach items="${properties}" var="node" varStatus="ctr">
				<tr>
					<td>${ctr.index + 1}</td>
					<c:choose>
						<c:when test="${empty node.mode}">
							<td><input id="name-${ctr.index}" type="text"
							style="width: 250px" value="${node.name}" disabled />
						</c:when>
						<c:otherwise>
							<td><input id="name-${ctr.index}" type="text"
							style="width: 250px" value="${node.testName}:${node.name}:${node.mode}" disabled />
						</c:otherwise>
					</c:choose>
					<td><input id="value-${ctr.index}" type="text"
						style="width: 450px" value="${node.value}" disabled />
					<td><input type="button" value="Edit"
						id="edit-property-update-${ctr.index}"
						onclick="editProperty(${ctr.index})"> <input type="button"
						value="Submit" hidden id="edit-property-submit-${ctr.index}"
						onclick="submitProperty(${ctr.index})"></td>
				</tr>
			</c:forEach>

		</tbody>
	</table>
</c:if>